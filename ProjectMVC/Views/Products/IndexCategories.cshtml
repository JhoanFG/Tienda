@model List<ProjectMVC.Logica.Models.ViewModels.ProductsIndexViewModel>

@{
    ViewBag.Title = "IndexCategories";
}

<div class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Productos</h1>
    </div>
</div>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            @Html.ActionLink("Todos los Productos", "Index", "Products")
        </li>
        <li class="breadcrumb-item active" aria-current="page">Pagina Principal</li>
    </ol>
</nav>

@{ int colum = 1; }
@foreach (var item in Model)
{
    if (colum == 1)
    {
        @Html.Raw("<div class='form-row'>");
    }

    <div class="cold-md-4">
        <div class="card bg-light" style="width: 18rem;padding:10px">
            <img src="~/Images/Products/@item.Guid@item.Extension" class="card-img-top" alt="..." width="150px" height="260px">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Description.Substring(0, item.Description.Length > 120 ? 120 : item.Description.Length)</p>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@item.Price</li>
                </ul>
                @Html.ActionLink("Detalles", "Details", "Products", new { id = item.Id }, new { @class = "btn btn-primary btn-sm fas fa-info-circle" })
            </div>
        </div>
    </div>
    if (colum == 3)
    {
        colum = 0;
        @Html.Raw("</div>")
    }
    colum++;
}

<br />
<hr class="featurette-divider">
<footer class="py-5 bg-dark">
    <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Utap 2019</p>
    </div>
    <!-- /.container -->
</footer>