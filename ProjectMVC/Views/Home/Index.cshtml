@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">LinkGShop</h1>
        <p class="lead text-muted">La tienda Online donde podras Comprar y vender productos con tus amigos.</p>
    </div>
</div>

<main role="main">

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/Acordeon/Consolas.jpg" class="d-block w-100" alt="Videojuegos" width="500px" height="460px">
            </div>
            <div class="carousel-item">
                <img src="~/Images/Acordeon/RopaM.jpg" class="d-block w-100" alt="Consolas" width="500px" height="460px">
            </div>
            <div class="carousel-item">
                <img src="~/Images/Acordeon/Tecnologia.jpg" class="d-block w-100" alt="Ropa Mujer" width="500px" height="460px">
            </div>
            <div class="carousel-item">
                <img src="~/Images/Acordeon/Videojuegos.png" class="d-block w-100" alt="MWT" width="500px" height="460px">
            </div>
            <div class="carousel-item">
                <img src="~/Images/Acordeon/RopaH.jpg" class="d-block w-100" alt="Productos Tecnologicos" width="500px" height="460px">
            </div>
            <div class="carousel-item">
                <img src="~/Images/Acordeon/Consolas2.jpg" class="d-block w-100" alt="Productos Tecnologicos" width="500px" height="460px">
            </div>

        </div>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <hr class="featurette-divider">
    <br />
    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->
    <h1 class="text-center">Colaboradores del Proyecto</h1>
    <hr class="featurette-divider">
    <div class="container marketing">
        <!-- Three columns of text below the carousel -->
        <div class="row">
            <div class="col-lg-4">
                <img class="rounded-circle" src="https://editorial.upc.edu.pe/wp-content/uploads/2018/08/no-photo.png" alt="Me" width="140" height="140">
                <h2>Juan Jose Quitiaquez </h2>
                <p>Estudiante de 5to semestre al año @DateTime.Now.Year de la carrera: Desarrollo de sistemas Informaticos - Tecnologica Autonoma del Pacifico </p>

            </div><!-- /.col-lg-4 -->
            <div class="col-lg-4">
                <img class="rounded-circle" src="https://editorial.upc.edu.pe/wp-content/uploads/2018/08/no-photo.png" alt="Generic placeholder image" width="140" height="140">
                <h2>Carlos Enrique Polanco</h2>
                <p>Estudiante de 5to semestre al año @DateTime.Now.Year de la carrera: Desarrollo de sistemas Informaticos - Tecnologica Autonoma del Pacifico </p>

            </div><!-- /.col-lg-4 -->
            <div class="col-lg-4">
                <img class="rounded-circle" src="https://editorial.upc.edu.pe/wp-content/uploads/2018/08/no-photo.png" alt="Generic placeholder image" width="140" height="140">
                <h2>Jhoan Fernando Giraldo</h2>
                <p>Estudiante de 6to semestre al año @DateTime.Now.Year de la carrera: Desarrollo de sistemas Informaticos - Tecnologica Autonoma del Pacifico </p>
            </div><!-- /.col-lg-4 -->
        </div><!-- /.row -->

        <hr class="featurette-divider">
        <footer class="py-5 bg-dark">
            <div class="container">
                <p class="m-0 text-center text-white">Copyright &copy; Utap 2019</p>
            </div>
            <!-- /.container -->
        </footer>
    </div>
</main>