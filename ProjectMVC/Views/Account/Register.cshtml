@using IdentitySample.Models
@model IdentitySample.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1>Crear Cuenta</h1>
    </div>
</section>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            @Html.ActionLink("Inicio", "Index", "Home")
        </li>
        <li class="breadcrumb-item active" aria-current="page">Pagina Principal</li>
    </ol>
</nav>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Crea una cuenta nueva.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    //Correo Electronico
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    //Contraseña
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    //Confirmar Contraseña
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    //Nuevos Campos
    //Organizacion
    <div class="form-group">
        @Html.LabelFor(m => m.Organization, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Organization, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Organization, "", new { @class = "text-danger" })
        </div>
    </div>
    //Plan
    <div class="form-group">
        @Html.LabelFor(m => m.Plan, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.Plan,
                    new SelectList(Enum.GetValues(typeof(Plan))),
                    new { @class = "form-control" })

            @Html.ValidationMessageFor(m => m.Plan, "", new { @class = "text-danger" })
        </div>
    </div>
    //Boton
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Registrarse" />
        </div>
    </div>

    <br/>
    <hr class="featurette-divider">
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Utap 2019</p>
        </div>
        <!-- /.container -->
    </footer>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
